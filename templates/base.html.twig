<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}Titre par défaut{% endblock %}</title>
    {% block stylesheets %}
        <link rel="stylesheet" type="text/css" href="{{ asset ('css/styles.css') }}">
    {% endblock %}
</head>
<body>
<header>
        <img class="logo" src="{{ asset('images/Logo-Abeilles.png') }}" alt="Logo-Abeilles">
{{ render(controller('App\\Controller\\HeaderController::index' ))}}
    </header>

    <div class="container">
        {% block body %}{% endblock %}
    </div>

    <script src="{{ asset('script-slider.js') }}"></script>
    <script src="{{ asset('header.js') }}"></script>

    <footer>
        <img class="logo-footer" src="{{ asset('images/Logo-Abeilles.png') }}" alt="Logo-Abeilles">
        
        <div class="footer_1">
            <h4>Contacts</h4>
            <p>
            +33 1 23 45 67 89<br>
            9 Rue Québec, 10430<br>
            Rosières-Près-Troyes
            </p>
        </div>
        
        <div class="footer_2">
            <h4>Conditions d'Utilisation</h4>
            <a href="{{ path('app_cgu') }}">Lien vers nos CGU.</a>
        </div>
        
        <div class="footer_3">
            <h4>Mentions Légales</h4>
            <a href="{{ path('app_mentions') }}">Lien vers nos Mentions Légales.</a>
        </div>

        <div class="footer_4">
            <h4>Réseaux Sociaux</h4>
            <img class="logo_reseaux" src="{{ asset('images/Logo_F.png') }}" alt="Logo-Facebook">
            <img class="logo_reseaux" src="{{ asset('images/Logo_I.png') }}" alt="Logo-Instagram">
            <img class="logo_reseaux" src="{{ asset('images/Logo_Y.png') }}" alt="Logo-YouTube">
        </div>

        <div class="footer_5">
            <h4>Nos partenaires :</h4>
            <img class="logo_partenairesIUT" src="{{ asset('images/Logo-IUT.png') }}" alt="Logo-IUT">
            <img class="logo_partenaires" src="{{ asset('images/Logo-agenda.png') }}" alt="Logo-agenda">
        </div>
    </footer>
</body>
</html>
