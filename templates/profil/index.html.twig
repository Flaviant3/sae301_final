        </li>
        <div class="container">
            <h2>Changer vos infos</h2>

            <!-- Modifier la photo de profil -->
            <div class="form-container2">
                <form action="{{ path('update_photo') }}" method="post" enctype="multipart/form-data">
                    <input type="file" name="profile_picture" accept="image/*">
                    <button type="submit">Modifier la photo de profil</button>
                </form>

                <!-- Messages de succès pour la modification de la photo de profil -->
                {% for message in app.flashes('success') %}
                    <div class="alert alert-success">{{ message }}</div>
                {% endfor %}
            </div>

            <!-- Modifier l'email -->
            <div class="form-container2">
                <form action="{{ path('update_profile') }}" method="post">
                    <input type="text" name="new_email" placeholder="Nouvel email" style="margin-top: 1px;">
                    <button type="submit"  style="margin-bottom: 1px;">Modifier l'email</button>
                </form>

                <!-- Messages de succès pour la modification de l'email -->
                {% for message in app.flashes('success') %}
                    <div class="alert alert-success">{{ message }}</div>
                {% endfor %}
            </div>

            <!-- Modifier le mot de passe -->
            <div class="form-container2">
                <form action="{{ path('update_mdp') }}" method="post">
                    <input type="text" name="new_mdp" placeholder="Nouveau MDP">
                    <button type="submit">Modifier le Mot de passe</button>
                </form>

                <!-- Messages de succès pour la modification du mot de passe -->
                {% for message in app.flashes('success') %}
                    <div class="alert alert-success">{{ message }}</div>
                {% endfor %}
            </div>

            <!-- Bouton de déconnexion -->
            <div class="logout-btn">
                <form action="{{ path('logout') }}" method="post">
                    <button type="submit">Se déconnecter</button>
                </form>
            </div>
        </div>
    </div>
{% endblock %}






